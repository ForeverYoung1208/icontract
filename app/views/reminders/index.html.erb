<p id="notice"><%= notice %></p>

<h1>Reminders</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>ID</th>
      <th>Type</th>
      <th>Dd</th>
      <th>Mm</th>
      <th>Yyyy</th>
      <th>Dofw</th>
      <th>Moq</th>
      <th>Begins</th>
      <th>Ends</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.id %></td>
        <td><%= reminder.reminder_type.name %></td>
        <td><%= reminder.dd %></td>
        <td><%= reminder.mm %></td>
        <td><%= reminder.yyyy %></td>
        <td><%= reminder.dofw %></td>
        <td><%= reminder.moq %></td>
        <td><%= reminder.begins %></td>
        <td><%= reminder.ends %></td>
        <td><%= reminder.is_active %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reminder', new_reminder_path %>
