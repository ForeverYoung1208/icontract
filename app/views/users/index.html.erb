<h1>Users</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
    	<th>id</th>
    	<th>Имя</th>
    	<th>емейл</th>
    	<th>уровень доступа в icontract</th>
    	<th>ИП адрес</th>
    </tr>
  </thead>

  <tbody>
  	<% @users.each do |u|%>
	  	<tr>
	  		<td> <%= u.id %> </td>
	  		<td> <%= u.name %> </td>
	  		<td> <%= u.email %> </td>
	  		<td> <%= u.roles.each { |r| tag.pre r.name} %> </td>
	  		<td> <%= u.ip_address %> </td>
	  	</tr>
	  <% end %>

  </tbody>

 </table>
    	