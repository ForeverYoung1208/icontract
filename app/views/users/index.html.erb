<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<div class="col-sm-8">
			<h2>Users</h2>

			<table class="table">
				<thead class="thead-default">
					<tr>
						<th>id</th>
						<th>Им’я</th>
						<th>Е-мейл</th>
						<th>Ролі користувача</th>
					</tr>
				</thead>

				<tbody id='ajaxUsers' inTag1='tr' inTag2='td'>

				</tbody>

			</table>


		</div> <!-- col -->
		<div class="col-sm-4">
			<div class="row">

				<div class="card card-default" id="functions">
					<div class="card-header"> 
						<h2 class="card-title">Функції</h2>
					</div>
					<div class="card-block" >
						<h4> Перетягніть роль на відповідну іконку:</h3>
						<div class="area droppable" id="btnDelete"><span class="fa-stack">
							  <i class="fa fa-trash fa-stack-2x"></i>
							</span> Видалити</div>
						<div class="area droppable" id="btnAddAll" ><span class="fa-stack">
							  <i class="fa fa-plus fa-stack-2x"></i>
							</span> Додати всім</div>
						<div class="area droppable" id="btnDeleteAll" >
							<span class="fa-stack">
							  <i class="fa fa-trash fa-stack-2x"></i>
							  <i class="fa fa-warning fa-stack-1x text-danger"></i>
							</span> Видалити у всіх
						</div>

					</div>
					<div class="card-block" >
						<button type="button" class="btn btn-primary" id="btnSave" onclick="save()" > Зберегти зміни</button>
					</div>
					
				</div>


				<div class="card card-default" id="rolesList">
					<div class="card-header"> 
						<h2 class="card-title">Можливі ролі</h2>
					</div>
					<div class="card-block" >
						<% @roles.each do |r| %>
							<span class="draggable badge badge-pill badge-info" data-rid="<%= r.id %>">
								<%= r.id.to_s + ' ' + r.name %>
							</span>
						<% end %>
					</div>
				</div>



			</div><!-- row-right-->

		</div><!-- col -->

	</div><!-- row -->




	<div class="row"><!-- To delete -->
		<div class="col-sm-8">
			<h2>Users</h2>

			<table class="table">
				<thead class="thead-default">
					<tr>
						<th>id</th>
						<th>Имя</th>
						<th>емейл</th>
						<th>уровень доступа в icontract</th>
						<th>ИП адрес</th>
					</tr>
				</thead>

				<tbody>
					<tr>
						<td>  u.id </td>
						<td>  u.name </td>
						<td>  u.email </td>
						<td>  u.roles </td>
						<td>  u.ip_address </td>
					</tr>  

				</tbody>

			</table>
		</div>



	</div> <!-- row -->



</div> <!-- container -->