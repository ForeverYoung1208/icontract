<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Number</th>
      <th>Sum</th>
      <th>From date</th>
      <th>To date</th>
      <th>Till</th>
      <th>Payer</th>
      <th>Recipient</th>
      <th>Is signed</th>
      <th>Is active</th>
      <th>Is deleted</th>
      <th>Responsible user</th>
      <th>Creator user</th>
      <th>Acts schedule</th>
      <th>Payments schedule</th>
      <th>Scan path</th>
      <th>Text path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.type.name %></td>
        <td><%= contract.name %></td>
        <td><%= contract.number %></td>
        <td><%= contract.sum %></td>
        <td><%= contract.from_date %></td>
        <td><%= contract.to_date %></td>
        <td><%= contract.till %></td>
        <td><%= contract.payer.name %></td>
        <td><%= contract.recipient.name %></td>
        <td><%= contract.is_signed %></td>
        <td><%= contract.is_active %></td>
        <td><%= contract.is_deleted %></td>
        <td><%= contract.responsible_user.name %></td>
        <td><%= contract.creator_user.name %></td>
        <td><%= contract.acts_schedule %></td>
        <td><%= contract.payments_schedule %></td>
        <td><%= contract.scan_path %></td>
        <td><%= contract.text_path %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

