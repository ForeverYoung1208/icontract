<div class="container-fluid">
  <div class="row justify-content-start align-items-end">
    <div class="col-sm-4">
      <p id="notice"><%= notice %></p>
      <h1>Договори</h1>
    </div> <!-- col -->

    <div class="col-sm-4">
      <input 
        type="radio" 
        name="listType" 
        id="radio-contracts-all" 
        onchange="listChange('<%= all_contracts_path %>')" <%= 'checked' if @list_type[:all] %>
      > 
      всі що мені доступні

      <br/>

      <input 
        type="radio" 
        name="listType" 
        id="radio-contracts-all" 
        onchange="listChange('<%= mine_contracts_path %>')" <%= 'checked' if @list_type[:mine] %>
      > 
      тільки мої





    </div> <!-- col -->
  </div> <!-- row -->

  <div class="row">
    <div class="col-sm-12" id="contracts-container">

    <%= render 'contracts_table' %>
      
    </div> <!-- col -->
  </div> <!-- row -->


  <div class="row">
    <div class="col-sm-12">
      <pre> <%= link_to 'New Contract', new_contract_path %> </pre>
    </div> <!-- col -->
  </div> <!-- row -->

</div>