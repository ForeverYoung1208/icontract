<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>id</th>
      <th>reminder</th>
      <th>user</th>
      <th>is_sent</th>
      <th>to_send</th>
      <th>email_address</th>
      <th>email_text</th>
      <th>on_date</th>



      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>event.id   </td>
        <td>event.reminder.name   </td>
        <td>event.user.name </td>
        <td>event.is_sent   </td>
        <td>event.to_send   </td>
        <td>event.email_address   </td>
        <td>event.email_text   </td>
        <td>event.on_date   </td>

        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

